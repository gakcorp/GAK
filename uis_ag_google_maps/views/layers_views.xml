<openerp>
    <data>
		<!--Actions items!-->
		<record id="uis_layers_settings_action_window" model="ir.actions.act_window">
			<field name="name">Layers settings</field>
			<field name="res_model">uis.settings.layers</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create new layer</p>
			</field>
		</record>
		<record id="uis_layers_cache_action_window" model="ir.actions.act_window">
			<field name="name">Layers settings</field>
			<field name="res_model">uis.cache.layers</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		<!-- Menu items!-->
		<menuitem name="Layers" id="uis_layers_settings_menu" parent="passportvl.uis_settings_menu_root" action="uis_layers_settings_action_window"/>
		<menuitem name="Cache" id="uis_cache_layers_menu" parent="passportvl.uis_settings_menu_root" action="uis_layers_cache_action_window"/>
		<!-- views !-->
		<record model="ir.ui.view" id="uis_layers_settings_list">
			<field name="name">Layers list</field>
			<field name="model">uis.settings.layers</field>
			<field name="arch" type="xml">
				<tree string="List of layers (for map)" editable="top" create="false" edit="false">
					<field name="name"/>
					<field name="enabled"/>
					<field name="shown"/>
					<field name="minzoom"/>
					<field name="maxzoom"/>
				</tree>
			</field>
		</record>
		
		<record model="ir.ui.view" id="uis_layers_settings_list">
			<field name="name">Cache list</field>
			<field name="model">uis.cache.layers</field>
			<field name="arch" type="xml">
				<tree string="List of cache (for map)" editable="top" create="false" edit="false">
					<field name="name"/>
					<field name="layer"/>
					<field name="z"/>
					<field name="x"/>
					<field name="y"/>
					<field name="cache_date"/>
					<field name="cache_end_life"/>
					<field name="req_cnt"/>
					<field name="is_stretch_tile"/>
					<field name="med_delay"/>
				</tree>
			</field>
		</record>
		<record model="ir.ui.view" id="uis_layers_settings_form">
			<field name="name">Layers form view</field>
			<field name="model">uis.settings.layers</field>
			<field name="arch" type="xml">
				<form string="Photo form">
					<group>
						<group>
							<field name="icon" widget="image"/>
							<h1>
								<field name="title"/>
							</h1>
							<h2>
								<field name="name"/>
							</h2>
							<field name="alt"/>
							<field name="order"/>
							<field name="enabled"/>
							<field name="shown"/>
						</group>
						<group>
							<field name="url_base"/>
							<field name="url_code"/>
							<field name="opacity"/>
							<field name="minzoom"/>
							<field name="maxzoom"/>
							<field name="auto_stretch_mz"/>
							<field name="cache"/>
							<field name="cache_life_day"/>
						</group>
					</group>
				</form>
			</field>
		</record>
    </data>
</openerp>