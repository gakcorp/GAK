	<record id="uis_papl_department_search" model="ir.ui.view">
	  <field name="name">uis.papl.department.search</field>
	  <field name="model">uis.papl.department</field>
	  <field name="arch" type="xml">
		<search string="Department Search">
		  <field name="id"/>
		  <field name="name"/>
		</search>
	  </field>
	</record>
	
	<record id="uis_papl_apl_search" model="ir.ui.view">
      <field name="name">uis.papl.apl.search</field>
      <field name="model">uis.papl.apl</field>
      <field name="arch" type="xml">
      <search string="Search Pillar">
		<field name="id"/>
		<field name="name"/>
        <field name="apl_type"/>
        <field name="inv_num"/>
		<field name="sup_substation_id"/>
		<separator/>
        <group expand="0" string="Group By">
		  <filter name="group_apl_sup_substation"
			string="Supply substation"
            context="{'group_by': 'sup_substation_id'}"
          />
          <filter name="group_apl_voltage"
            string="Voltage"
            context="{'group_by': 'voltage'}"
          />
        </group>
      </search>
      </field>
    </record>
	
    <record model="ir.ui.view" id="uis_papl_apl_list">
      <field name="name">APL List</field>
      <field name="model">uis.papl.apl</field>
      <field name="arch" type="xml">
        <tree string="List of Air power line" editable="top" create="true" edit="false">
          <field name="id"/>
          <field name="name" string="Name"/>
          <field name="inv_num" string="Inventory Num"/>
          <field name="bld_year" string="Build Year"/>
          <field name="startexp_date" string="Start Explatation Date"/>
          <field name="line_len" string="Line Lengt (km)"/>
					<field name="line_len_calc" string="Calculate line len(m)"/>
          <field name="pillar_id" string="Pillars" widget='one2many'/>
					<field name="cnt_pillar_wo_tap"/>
					<field name="sup_substation_id" string="Supply Substation" widget='many2one'/>
					<button name="act_show_map" string="Map" type="object" icon="STOCK_FIND"/>
        </tree>
		</field>
    </record>
	<record id="uis_papl_pillar_form" model="ir.ui.view">
		<field name="name">Pillar form view</field>
		<field name="model">uis.papl.pillar</field>
		<field name="arch" type="xml">
			<form string="Pillar form">
			<sheet string="Details">
				<h1>
					<field name="name"/>
				</h1>
				<h2>
					<field name="apl_id"/>
					<field name="tap_id"/>
				</h2>
				<notebook>
					<page string="Main">
						<group>
							<group>
								<field name="num_by_vl"/>
								<field name="latitude"/>
								<field name="longitude"/>
								<field name="elevation"/>
								<field name="near_pillar_ids" widget="many2many_tags" options="{'no_create_edit':True,'no_quick_create':True}" invisible="1"/>
								<field name="parent_id"/>
								<field name="azimut_from_prev"/>
							</group>
							<group>
								<field name="pillar_material_id"/>
								<field name="pillar_type_id"/>
								<field name="pillar_cut_id"/>
								<field name="pillar_stay_rotation"/>
							</group>
						</group>
					</page>
					<page string="Details">
					</page>
	   		</notebook>
			</sheet>
			</form>
		</field>
	</record>

	<record id="uis_papl_apl_kanban" model="ir.ui.view">
		<field name="name">APL Kanban view</field>
		<field name="model">uis.papl.apl</field>
		<field name="arch" type="xml">
			<kanban>
				<field name="name"/>
				<templates>
					<t t-name="kanban-box" create="false"><!--default_group_by="field"!-->
						<div class="oe_kanban_vignette oe_semantic_html_override" style="padding:0px;">
							<!--<a type="open">!-->
								<!--<img style="max-width:100%;" t-att-src="kanban_image('uis.ap.photo','image_400',record.id.value)" class="oe_kanban_image"/>!-->
								<img style="max-width:100%;"  t-att-src="kanban_image('uis.papl.apl','scheme_image',record.id.value)" class="oe_kanban_image"/>
							<!--</a>!-->
							<div class="oe_kanban_details" style="position: absolute;top: 10px;left: 0px;padding-left: 10px;background: rgba(182, 187, 255, 0.44);">
								<div class="oe_right oe_button_box" style="width: 300px;" name="buttons_kanban_view">
								<button class="oe_inline" name="act_show_map" type="object">
                       Map
                </button>
								</div>
								<h4>
									<a type="open">
										<field name="name"/>
									</a>
								<div name="tags"/>
								<ul>
									<li>Locality: <field name="locality"/></li>
									<li>Inventory Number: <field name="inv_num"/></li>
									<li>Line Lenght: <field name="line_len_calc"/></li>
									<li>Substation: <field name="sup_substation_id"/></li>
									<li>Build year: <field name="bld_year"/></li>
									<li>Pillars: <field name="pillar_id"/></li>
									<!--<li>Alt : <field name="altitude"/></li>!-->
								</ul>
								</h4>
							</div>
						</div>
					</t>
				</templates>
			</kanban>
		</field>
	</record>

	
	<record id="uis_papl_pillar_search" model="ir.ui.view">
            <field name="name">uis.papl.pillar.search</field>
            <field name="model">uis.papl.pillar</field>
            <field name="arch" type="xml">
                <search string="Search Pillar">
					<field name="id"/>
					<field name="name"/>
                    <field name="num_by_vl"/>
                    <field name="pillar_material_id"/>
					<field name="pillar_type_id"/>
					<field name="longitude"/>
					<field name="latitude"/>
					<field name="apl_id"/>
					<field name="tap_id"/>
                    <separator/>
                    <group expand="0" string="Group By">
                      <filter name="group_pillar_material"
                              string="Material"
                              context="{'group_by': 'pillar_material_id'}"
                              />
                      <filter name="group_pillar_type"
                              string="Type"
                              context="{'group_by': 'pillar_type_id'}"
                              />
                      <filter name="group_pillar_apl"
                              string="APL"
                              context="{'group_by': 'apl_id'}"
                              />
                      <filter name="group_pillar_tap"
                              string="TAP"
                              context="{'group_by': 'tap_id'}"
                              />
                    </group>
                </search>
            </field>
        </record>
	
	<record model="ir.ui.view" id="uis_papl_pillar_list">
      <field name="name">Pillar List</field>
      <field name="model">uis.papl.pillar</field>
      <field name="arch" type="xml">
        <tree string="List of Pillar" editable="top" create="true" edit="false">
          <field name="id"/>
					<field name="pillar_icon_code"/>
          <field name="name" string="Pillar Name"/>
          <field name="num_by_vl" string ="Number pillar on power line"/>
		  <field name="pillar_type_id" string="Pillar Type" widget='many2one'/>
		  <field name="pillar_material_id" string="Pillar material" widget='many2one'/>
		  <!--<field name="longitude" string="Longitude"/>
		  <field name="latitude" string="Latitude"/>
		  <field name="prev_longitude" string="Prev Longitude"/>
		  <field name="prev_latitude" string="Prev Latitude"/>!-->
		  <field name="len_prev_pillar" string="Lenght to prev pillar (m)" widget="progressbar"/>
		  <!--<field name="azimut_from_prev" string="prev_azimut (degr)"/>!-->
		  <field name="elevation" string="Elevation"/>
		  <field name="apl_id" string="APL" widget="many2onebutton"/>
		  <field name="tap_id" string ="Tap"/>
		  <field name="parent_id" string="Prev pillar" widget="many2onebutton"/>
		</tree>
		</field>
    </record>
	
	<record model="ir.ui.view" id="uis_papl_pillar_kanban">
		<field name="name">Pillar kanban</field>
		<field name="model">uis.papl.pillar</field>
		<field name="arch" type="xml">
			<kanban default_group_by="pillar_type_id" default_order="apl_id,tap_id,num_by_vl">
				<field name="name"/>
				<field name="pillar_type_id"/>
				<field name="apl_id"/>
				<field name="tap_id"/>
				<field name="num_by_vl"/>
				<templates>
					<t t-name="kanban-box" create="false">
						<div class="oe_kanban_vignette oe_semantic_html_override" style="padding:5px; max-width:250px;font-size:x-small;">
						<!--<img style="max-width:100%;"  t-att-src="kanban_image('uis.papl.apl','scheme_image',record.id.value)" class="oe_kanban_image"/>!-->
						<div class="oe_kanban_details"> <!--style="position: absolute;top: 10px;left: 0px;padding-left: 10px;background: rgba(182, 187, 255, 0.44);">!-->
							<a type="open">
								<field name="name"/>
							</a>
							<div name="tags"/>
							<ul>
								<li>APL: <field name="apl_id"/></li>
								<li>Tap: <field name="tap_id"/></li>
								<li>Num by APL: <field name="num_by_vl"/></li>
								<li>Type: <field name="pillar_type_id"/></li>
								<li>Cut: <field name="pillar_cut_id"/></li>
								<li>Material: <field name="pillar_material_id"/></li>
							</ul>
						</div>
						</div>
					</t>
				</templates>
			</kanban>
		</field>
	</record>
	

	


	<record model="ir.ui.view" id="uis_papl_substation_list">
	  <field name="name">Power Substation List</field>
	  <field name="model">uis.papl.substation</field>
	  <field name="arch" type="xml">
		<tree string="List of Power Substation" editable="false" create="true" edit="false">
		  <field name="id"/>
		  <field name="name" string="Substation Name"/>
		  <field name="apl_id" string="APLs" widget='one2many'/>
		  <button name="act_show_map" string="Map" type="object" icon="STOCK_FIND"/>
		</tree>
	  </field>
	</record>
	
	<record id="uis_papl_substation_form" model="ir.ui.view">
	  <field name="name">Substation form view</field>
	  <field name="model">uis.papl.substation</field>
	  <field name="arch" type="xml">
		<form string="Substation form">
			<header>
				<field name="state" widget="statusbar" statusbar_visible="draft,ready,exploitation,defect,maintenance,repairs,write-off" statusbar_colors='{"draft":"red","exploitation":"blue","defect":"red"}'/>
			</header>
			<notebook>
				<page string="Main details">
					<sheet string="Details">
						<div class="oe_right oe_button_box" style="width: 300px;" name="buttons">
							  <button class="oe_inline" name="act_show_map" type="object" 
			                 icon="fa-map">
                       Map
								</button>
								<button class="oe_inline" name="add_apl" type="object" 
			                 icon="fa-plus">
                       Map
								</button>
								<button class="oe_inline" name="act_show_new_map" type="object"
												icon="fa-map">New map</button>
								
								<br/>
						</div>
						<group>
							<group>
								<field name="photo" widget="image" width="300" nolabel="1"/>
							</group>
							<group>
								<field name="name"/>
								<field name="department_id"/>
							</group>
						</group>
						<br/>
						<label for="apl_id"/>
						<field name="apl_id" widget="many2many_kanban"/>
						<!--<field name="apl_id"/>!-->
					</sheet>
				</page>
				<page string="Scheme">
					<group>
						<field name="image_scheme" widget="image" options='{"size":[900,900]}' style="width:600px;" nolabel="1"/>
					</group>
				</page>
				<page string="Substation APLs Scheme">
					<group>
						<field name="apl_scheme" widget="image" options='{"size":[900,900]}' style="width:600px;" nolabel="1"/>
					</group>
				</page>
				<page string="Connections" attrs="{'invisible':[('latlng','=',0)]}">
					<field name="latlng"/>
					<group>
						<group string="Near Pillars">
							<field name="near_pillar_ids" widget="many2many_tags"/>
						</group>
						<group string="Connected Pillars">
							<field name="conn_pillar_ids" attrs="{'invisible':[('near_pillar_ids','=',False)]}"/><!--widget="many2many_checkboxes"!-->
						</group>	
					</group>
					
				</page>
				<page string="Geo data">
				<group>
					<group>
						<field name="latitude"/>
						<field name="longitude"/>
					</group>
				</group>
				</page>
			</notebook>
		</form>
		</field>
	</record>
			

	
	<record model="ir.ui.view" id="wizard_create_pillar">
	  <field name="name">Create additional Pillars</field>
	  <field name="type">form</field>
	  <field name="model">uis.papl.wizard.create.pillars</field>
	  <field name="arch" type="xml">
		<form>
		  <h1>Form for creation of new pillar between 2 pillars</h1>
		  <label for="pillar1_id"/>
		  <field name="pillar1_id" string="Start Pillar"/>
		  <label for="pillar2_id"/>
		  <field name="pillar2_id" string="End Pillar"/>
		  <label for="distance"/>
		  <field name="distance" string="Distance between pillars"/>
		  <label for="apl_id"/>
		  <field name="apl_id" string="APLs"/>
		  <label for="tap_id"/>
		  <field name="tap_id" string="Tap"/>
		  <label for="count_pillar"/>
		  <field name="count_pillar"/>
		  <label for="calc_med_dist"/>
		  <field name="calc_med_dist"/>
		  <label for="start_num"/>
		  <field name="start_num"/>
		  <!--<field name="pillar1_id"/>
		  <field name="pillar2_id"/>
		  <field name="apl_id"/>  !-->
		  <footer>
			<button string="Cancel" special="cancel"/>
			<!--<button name="confirm" string="Apply" class="oe_highlight"/>!-->
			<button name="save_create" type="object" string="Create" class="oe_highlight"/>
		  </footer>
		</form>
	  </field>
	</record>


