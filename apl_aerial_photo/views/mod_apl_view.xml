<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_papl_apl_aerophoto_buttons_form" model="ir.ui.view">
            <field name="name">uis.papl.apl.inherit</field>
            <field name="model">uis.papl.apl</field>
            <field name="inherit_id" ref="passportvl.uis_papl_apl_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='buttons']" position="inside">
                   <!--<script type="text/javascript" src="../apl_aerial_photo/static/src/js/jquery.magnify.js"></script>!-->
				   <button class="oe_inline oe_stat_button" name="action_view_photos" type="object" 
                       icon="fa-camera">
                       <field string="Photo" name="photo_count" widget="statinfo"/>
                   </button>
                </xpath>
				
				<xpath expr="/form/sheet/notebook" position="inside">
					<page string="Photos">
						<field name="photo_ids" widget="many2many_kanban">
                            <kanban>
								<templates>
									<t t-name="kanban-box">
										<div class="oe_kanban_vignette oe_semantic_html_override" style="padding:0px;">
											<a type="object" name="view_photo_action">
												<img style="max-width:100%;" t-att-src="kanban_image('uis.ap.photo','image_400',record.id.value)" class="oe_kanban_image"/>
												<div style="position: absolute;bottom: 0px;right: 0px;width: 300px;">
													<img style="max-width:100%;" t-att-src="kanban_image('uis.ap.photo','image_scheme', record.id.value)" />	
												</div>
												
											</a>
										<div class="oe_kanban_details" style="position: absolute;top: 10px;left: 0px;padding-left: 10px;background: rgba(182, 187, 255, 0.44);">
											<h4>
												<a type="object" name="view_photo_action">
													<field name="image_filename"/>
												</a>
												<div name="tags"/>
												<ul>
												</ul>
											</h4>
										</div>
										</div>
									</t>
								</templates>
							</kanban>
                        </field>



					</page>
				</xpath>
            </field>
        </record>
    </data>
</openerp>