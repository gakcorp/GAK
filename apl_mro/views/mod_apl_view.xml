<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
        <record id="view_papl_apl_mro_buttons_from" model="ir.ui.view">
            <field name="name">uis.papl.apl.inherit</field>
            <field name="model">uis.papl.apl</field>
            <field name="inherit_id" ref="passportvl.uis_papl_apl_form"/>
            <!--<field name="groups_id" eval="[(4, ref('asset.group_mro_user'))]"/>!-->
            <field name="arch" type="xml">
                <xpath expr="//div[@name='buttons']" position="inside">
                   <button class="oe_inline oe_stat_button" name="action_view_defect" type="object"
						icon="fa-exclamation-triangle">
						<field string="Defect" name="all_defect_count" widget="statinfo"/>
				   </button>
				   <button class="oe_inline oe_stat_button" name="action_view_maintenance" type="object" 
                       icon="fa-cogs">
                       <field string="Maintenance" name="mro_count" widget="statinfo"/>
                   </button>
                </xpath>
				<xpath expr="/form/sheet/notebook" position="inside">
					<page string="Defects">
						<field name="all_defect_ids" />
					</page>
				</xpath>
				<xpath expr="/form/sheet/group/group" position="before">
					<group>
						<div id="defect_state_category_series_chart" style="height:200px; width:400px;">
							<field name="defect_heatmap_data_json" widget="heatmap" options='{"radius":100}'/>
						</div>
					</group>
				</xpath>
				<xpath expr="/form/sheet/group/group" position="before">
					<group>
						<div id="defect_heat_map" style="height:200px; width:400px;">
							<field name="defect_state_category_data_json" widget="series_chart" options='{}'/>
						</div>
					</group>
				</xpath>
            </field>
        </record>
<!--
